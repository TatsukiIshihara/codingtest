<p id="notice"><%= notice %></p>

<h1>Articles</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th>Content</th>
      <th>Created_at</th>
      <th>Action</th>
      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.id%></td>
        <td><%= link_to(article.Title, article) %></td>
        <td><%= article.Content %></td>
        <td><%= article.created_at %></td>
        <td><%= button_to 'Edit', edit_article_path(article) %> <%= button_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= button_to 'Create New', new_article_path %>
